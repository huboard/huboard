<div class="card-header">
  <div class="title" title="{{issue.title}}">
    {{issue.title}}
  </div>
  <div class="number">
    <small>#</small>
    <a class="xnumber" href="{{issue.html_url}}" target="_blank" title="View issue on github.com">
      {{issue.number}}
    </a>
    {{#if issue.pull_request}} {{#if issue.pull_request.html_url }} <i class="ui-icon ui-icon-21 ui-icon-branch-merge"></i> {{/if}} {{/if}}
  </div>
</div>

{{#if issue.assignee }}
  {{hb-avatar-tooltip user=issue.assignee width="24" height="24" }}
{{/if}}

<div class="card-labels">
    {{#each label in cardLabels }}
      <div class="card-label-wrapper"> 
         <div class="card-label active small {{label.customColor}}"></div>
         <div class="card-label active large {{label.customColor}}">
          <span>{{label.name}}</span>
         </div>
      </div>
    {{/each}}
</div>

{{#if isLast}}
  <div class="hb-action actions-close">
    <button class="hb-button" disabled={{processing}} {{action 'close' issue bubbles=false}}>Close</button>
  </div>                                                      
{{/if}}

{{#if canArchive}}

<div class="hb-action actions-archive">
  <button class="hb-button-icon hb-button hb-button-grey" disabled={{processing}} {{action "archive" issue bubbles=false}}><i class="ui-icon ui-icon-box-add"></i>Archive</button>
</div>                                                      
{{/if}}

<div class="card-states">
   <img src="{{asset-path "check.png"}}" title="Issue is closed" class="hb-state-closed"/>
   <img src="{{asset-path "arrow.png"}}" class="hb-state-ready"/>
   <img src="{{asset-path "x.png"}}" class="hb-state-blocked"/>
</div>
