{{#if editable}}
<h5 {{action "toggleSelector"}}> 
  <i  class="pull-right ui-icon ui-icon-gear"></i>
  {{ title }}
</h5>
{{else}}
<h5> 
  {{ title }}
</h5>
{{/if}}

<div class="hb-display-items">
  {{#each label in selected}}
  <div class="hb-display-item background -x{{unbound label.color}}">
  <span>
    {{label.name}}
  </span>
  </div>
  {{else}}
  <div class="hb-selected empty">
    None yet
  </div>
  {{/each}}
</div>
{{#if editable}}
<div class="hb-flyout">
  <div class="hb-header">
    Assign labels to this issue
  </div>
  <div class="hb-text-filter">
    {{input placeholder="Filter labels" value=filterLabels}}
  </div>
  <div class="hb-label-items">
    {{#each label in listItems}}
    {{#hb-label label=label}}
    <span>
      {{label.name}}
    </span>
    {{/hb-label}}
    {{/each}}
  </div>
</div>
{{/if}}

